.panel-body
  = simple_form_for @hmo do |f|
    .form-inputs
      .col-md-6
        = f.input :name, label: I18n.t('hmo.name')
      .col-md-6
        = f.input :contact_person, label: I18n.t('hmo.contact_person')
      .col-md-6
        = f.input :contact_num, label: I18n.t('hmo.contact_num')
    .form-inputs
      .col-md-12
        = f.input :address, label: I18n.t('hmo.address'), as: :text

    .col-md-12
      .form-actions
        - if @hmo.new_record?
          = f.button :submit, I18n.t('actions.create_hmo'), :class => "btn btn-primary"
          = link_to 'Cancel', hmos_path, :class => "btn btn-default"
        - else
          = f.button :submit, I18n.t('actions.update_hmo'), :class => "btn btn-primary"
          = link_to 'Cancel', hmo_path(@hmo), :class => "btn btn-default"